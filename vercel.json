{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/api/:path*"
    }
  ],
  "redirects": [
    { "source": "/", "permanent": false, "destination": "/openapi.json" }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "src/*.*"
    }
  },
  "public": true
}
